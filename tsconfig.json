{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/node20/tsconfig"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "outDir": "build",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "resolveJsonModule": true,
    "typeRoots": [
      "src",
      "node_modules/@types"
    ],
    "lib": [
      "es2022",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@types/*"
  ]
}